<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:background="#F7F8FB"
    android:padding="12dp" android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical" android:background="#FFFFFF" android:padding="14dp" android:elevation="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/headerTitle" android:text="Results" android:textSize="18sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/headerSubtitle" android:text="Your interview summary" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical" android:background="#FFFFFF" android:padding="18dp" android:layout_marginTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="6dp">
            <TextView android:text="Total Score" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvScore" android:text="0 / 100" android:textSize="32sp" android:textStyle="bold" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvApt" android:text="Aptitude: 0/5" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvRole" android:text="Role: 0/5" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvIntro" android:text="Intro: 0/5" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvLong" android:text="Long: 0/4" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView android:text="Feedback" android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/tvFeedback" android:text="Detailed feedback appears here." android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
