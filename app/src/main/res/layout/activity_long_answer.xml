<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:background="#F7F8FB"
    android:padding="12dp" android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical" android:background="#FFFFFF" android:padding="14dp" android:elevation="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/headerTitle" android:text="Long Answers" android:textSize="18sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/headerSubtitle" android:text="Write detailed answers" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView android:id="@+id/tvLongPrompt" android:text="Long prompt" android:textSize="16sp" android:layout_marginTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText android:id="@+id/etLongAnswer" android:hint="Type your long answer here" android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="200dp" android:gravity="top" android:inputType="textMultiLine"/>

        <Button android:id="@+id/btnNext" android:text="Next" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
