<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp" android:background="#F7F8FB"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical" android:background="#FFFFFF" android:padding="14dp" android:elevation="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/headerTitle" android:text="Introduction" android:textSize="18sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/headerSubtitle" android:text="Role: N/A" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView android:id="@+id/tvQuestion" android:text="Question" android:textSize="16sp" android:layout_marginTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etAnswer" android:hint="Your spoken answer will appear here" android:inputType="textMultiLine" android:minLines="3" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="horizontal" android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btnRecord" android:text="Record" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <View android:layout_width="12dp" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnNext" android:text="Next" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
